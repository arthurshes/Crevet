<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:id="@+id/card_option"
    style="@style/option_variant_radius"
    android:elevation="20dp"
    app:cardCornerRadius="3dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:background="@null"
        android:orientation="horizontal">



        <workwork.test.andropediagits.presenter.lesson.victorine.customview.AnimatedCircleView
            android:id="@+id/animatedCircleView"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/custom_card_course"
            />

        <TextView
            android:id="@+id/textView"

            android:layout_marginStart="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:background="@null"
            style="@style/Text_black_white"
            android:text="TextView"
            />
    </LinearLayout>

</LinearLayout>